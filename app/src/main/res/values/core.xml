<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#FFECB3</color>
    <color name="ic_launcher_adaptive_background">#000000</color>
    <color name="primary">#263238</color>
    <color name="primary_dark">#000A12</color>
    <color name="text_primary">#FFAB40</color>
    <color name="text_secondary">#263238</color>
    <color name="secondary">#FFAB40</color>
    <color name="window_background">#273339</color>

    <dimen name="layout_content_padding">16dp</dimen>

    <integer name="anim_duration">@android:integer/config_mediumAnimTime</integer>

    <string name="app_label">Dinger</string>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorSecondary">@color/secondary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>
</resources>
